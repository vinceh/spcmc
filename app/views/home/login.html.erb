<% form_tag do -%>
	<fieldset>
		<legend>Login</legend>
		<ul>
			<li>
				<label>Username:</label>
				<%= text_field 		:user, :username %>
			</li>
			<li>
				<label>Password:</label>
				<%= password_field 	:user, :password %>
			</li>
			<li><%= submit_tag "Log in" %></li>
		</ul>
	</fieldset>
<% end -%>